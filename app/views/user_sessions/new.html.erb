<% content_for(:title, t('.title')) %>

<div class="container">
  <div class="row justify-content-center">
    <div class="card resulting col-10 col-md-6">
      
      <div class="card-body">
        <h2 class="result card-title text-center">ðŸ“– <%= t '.title' %></h2>
        <div class="register">
        <%= form_with url: login_path, method: :post, local: true do |f| %>
          
            <div class="form-group">
              <%= f.label :email, User.human_attribute_name(:email) %>
              <%= f.text_field :email, class: "form-control", placeholder: 'emory@example.com' %>
            </div>
            <div class="form-group">
              <%= f.label :password, User.human_attribute_name(:password) %>
              <%= f.password_field :password, class: "form-control", placeholder: 'password' %>
            </div>
            <div class="text-center">
              <%= f.submit t('defaults.login'), class: "btn btn-normal" %>
            </div>
          <% end %>
          <div class='text-center'>
            <%= link_to t('.to_register_page'), new_user_path, class: "login-link" %>
          </div>
          <div class='text-center'>
            <%= link_to 'forgot password', new_password_reset_path, class: "login-link" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
