<% content_for(:title, "edit profile") %>

<div class="container">
  <div class="row justify-content-center">
  <div class="card resulting col-10 col-md-6 text-center">
  
  <div class="card-body text-center">
    <h3 class="result"><%= current_user.nickname %>edit profile</h3>
    <div class="edit-profile">
          <%= simple_form_for @user, url: profiles_path, local: true do |f| %>
            <div class="form-group">
              <%= f.input :name, class: 'form-control mb-3', hint: '半角英数字のみ使用できます 例:emory123' %>
            </div>
            <div class="form-group">
              <%= f.input :email, class: 'form-control mb-3' %>
            </div>
            <div class="form-group">  
              <%= f.input :password, class: 'form-control mb-3', label: 'reset password', hint: '半角英数字8文字以上で入力してください' %>
            </div>
            <div class="form-group">  
              <%= f.input :password_confirmation, class: 'form-control mb-3' %>
            </div>
            <div class="text-center">
              <%= f.button :submit, class: 'btn-normal' %>
            </div>
          <% end %>
          <div class="text-center">
            <%= link_to '退会', user_path(@user), method: :delete, data: { confirm: "<i class='fa fa-exclamation-circle'></i>
            退会してもよろしいですか?", commit: 'yes', cancel: 'cancel' }, class: "withdraw" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
