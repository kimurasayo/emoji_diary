<% content_for(:title, 'forgot password') %>

<div class="container">
  <div class="row justify-content-center">
    <div class="card resulting col-10 col-md-6">
      
      <div class="card-body">
        <h2 class="result card-title text-center">⚙️ forgot password</h2>
          <div class='text-center description'>
            登録したメールアドレスを入力してください
          </div>
        <div class="register">
        <%= form_with url: password_resets_path, local: true do |f| %>
            <div class="form-group">
              <%= f.label :email, User.human_attribute_name(:email) %>
              <%= f.text_field :email, class: "form-control", placeholder: 'emory@example.com' %>
            </div>
            <div class="text-center">
              <%= f.submit t('defaults.submit'), class: "btn btn-normal" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
