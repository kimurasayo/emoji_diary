<% content_for(:title, 'followers') %>

<div class="container">
  <div class="row justify-content-center">
    <div class="resulting col-10">
      <div class="text-right">
        <%= link_to 'back', profiles_path, class: "btn btn-primary" %>
      </div>
      <h1 class="result"><%= current_user.nickname %> followers</h1>
      
      <% if @users.empty? %>
        <div class="card">
          <div class="card-body text-center">
            <p class="follow_text">フォロワーがいません。</p>
          </div>
        </div>
      <% else %>
        <div class="row justify-content-center">
          <div class="col-6">
            <table class="result-table table table-borderless">

            <tbody>
              <% @users.each do |user| %>
                <tr class="result text-left">
                  <td style="width: 50%">
                    <%= link_to user_diaries_path(user), class: "result-link" do%>
                      <%= user.nickname %> <%= user.name %>
                    <% end %>
                  </td>
                  <td class="text-right" style="width: 50%">
                    <% if logged_in? && current_user != user %>
                      <%= render 'relationships/follow_button_area', user: user %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
            </table>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
