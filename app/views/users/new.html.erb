<% content_for(:title, 'register') %>

<div class="container">
  <div class="row justify-content-center">
    <div class="card resulting col-10 col-md-6">
      
      <div class="card-body">
        <h2 class="result card-title text-center">📖 <%= t '.title' %></h2>
        <div class="register">
        <%= simple_form_for @user, local: true do |f| %>
          <div class="form-group">
            <%= f.input :name, class: 'form-control', placeholder: 'emory123', hint: "半角英数字のみ使用できます" %>
          </div>
          <div class="form-group">
            <%= f.input :email, class: 'form-control', placeholder: 'emory@example.com' %>
          </div>
          <div class="form-group">
            <%= f.input :password, class: "form-control", placeholder: 'password', hint: "半角英数字8文字以上で入力してください" %>
          </div>
          <div class="form-group">
            <%= f.input :password_confirmation, class: "form-control", placeholder: 'password' %>
          </div>

          <div class="text-center">
            <%= f.button :submit, t('defaults.register'), class: 'btn-normal' %>
          </div>
        <% end %>
        <div class='text-center'>
          <%= link_to t('.to_login_page'), login_path, class: "login-link" %>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
